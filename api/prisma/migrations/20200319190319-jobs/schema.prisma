datasource DS {
  provider = "sqlite"
  url = "***"
}

generator photonjs {
  provider      = "prisma-client-js"
  binaryTargets = env("BINARY_TARGET")
}

// Define your own datamodels here and run `yarn redwood db save` to create
// migrations for them.
model User {
  id             Int      @id @default(autoincrement())
  email          String   @unique
  given_name     String
  email_verified Boolean
  family_name    String
  picture        String
  locale         String
  updated_at     DateTime
  sub            String
}

enum Type {
  HOUR TASK
}

model Task {
  id        Int    @id @default(autoincrement())
  task_name String
  price     Int
  type      Type
}


model Work {
  id          Int     @id @default(autoincrement())
  can_contact Boolean
  user        User
  donate_link String
  description String
  tasks       Task[]
}
